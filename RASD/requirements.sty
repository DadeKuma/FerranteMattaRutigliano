\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{requirements}[2018/10/14 RASD package]
\RequirePackage{longtable}
\RequirePackage{caption}

\newcommand{\name}[1]{
	\hline
    \textbf{Name} & #1 \tabularnewline
    \hline
}
\newcommand{\brief}[1]{
	\hline
    \textbf{Brief Description} & #1 \tabularnewline
    \hline
}
\newcommand{\actor}[1]{
	\hline
    \textbf{Actor} & #1 \tabularnewline
    \hline
}
\newcommand{\pre}[1]{
	\hline
    \textbf{Pre-Conditions} & #1 \tabularnewline
    \hline
}
\newcommand{\post}[1]{
	\hline
    \textbf{Post-Conditions} & #1 \tabularnewline
    \hline
}
\newcommand{\epoint}[1]{
	\hline
    \textbf{Exentension Points} & #1 \tabularnewline
    \hline
}

\newcommand{\bflow}[1]{%
    \textbf{Basic Flow} & 
    \begin{enumerate}
    \item #1\checknextarg
}
\newcommand{\aflow}[1]{%
    \textbf{Alternate Flow} & 
    \begin{enumerate}
    \item #1\checknextarg
}
\newcommand{\except}[1]{%
     \textbf{Exception} & 
    \begin{itemize}
    \item #1\checknextexception
}
\newcommand{\checknextexception}{
	\@ifnextchar\bgroup{\gobblenextexception}{\end{itemize} \tabularnewline \hline}
}
\newcommand{\gobblenextexception}[1]{
	\item #1\@ifnextchar\bgroup{\gobblenextarg}{\end{itemize} \tabularnewline \hline}
}
\newcommand{\checknextarg}{
	\@ifnextchar\bgroup{\gobblenextarg}{\end{enumerate} \tabularnewline \hline}
}
\newcommand{\gobblenextarg}[1]{
	\item #1\@ifnextchar\bgroup{\gobblenextarg}{\end{enumerate} \tabularnewline \hline}
}

\newenvironment{usecase}[1]
    {\begin{longtable}{|p{3cm}|p{8cm}|}
        \captionsetup{name=Use Case}
        \caption{\fontsize{10px}{0mm}\selectfont #1}
        \endlastfoot
    }
    {\end{longtable}}